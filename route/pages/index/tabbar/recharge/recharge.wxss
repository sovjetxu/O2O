/* pages/index/tabbar/recharge/recharge.wxss */
.inputtext{
  width: 96%;
  margin: auto;
  height: 140rpx;
}
.inputtext input{
  border: 1rpx solid #ededed;
  border-radius: 10rpx;
  height: 80rpx;
}
.radio-group{
  width: 96%;
  margin: auto;
}
.radio{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.radio view:first-of-type{
  width: 10%;
}
.radio view:nth-last-child(2){
  width: 80%;
}
.radio radio{
  width: 10%
}
.radio view image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 12rpx;
}
.formbutton{
  position: absolute;
  bottom: 80rpx;
  width: 96%;
  background: rgb(241, 92, 110);
  color: #ffffff;
  font-weight: 600;
  margin: 0 2%;
}

