.slideshow{
  height: 350rpx;
  width: 96%;
  margin: auto;
}
.slideshow image{
  width: 100%;
  height: 350rpx;
}
.navigation{
  width: 96%;
  margin: 80rpx auto;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.navigation>view{
  width: 23%;
  height: 160rpx;
}
.navigation view image{
  width: 80%;
  margin-left: 10%;
  height: 100rpx;
}
.navigation view image+view{
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
}
.commodity{
  width: 96%;
  margin: auto;
  height: 120rpx;
  border-bottom: 1rpx #ededed solid;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.commodity image{
  width: 20%;
  height: 80rpx;
}
.commodity .message {
  width: 60%;
  height: 120rpx;
  padding-left: 30rpx;
}
.commodity .message view{
  font-size: 34rpx;
}
.commodity .message view:last-of-type{
  color: #ff0000;
}
.commodity .purchase{
  width: 20%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #81c7d1;
  color: #ffffff;
  font-weight: bold;
}



